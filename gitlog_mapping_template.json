{
    "settings": {
        "number_of_shards": 2,
        "number_of_replica": 0
    },
    "mappings": {
        "_default_": {
            "_id": {
                "path": "commit_id"
            },
            "properties": {
                "commit_id": {
                    "type": "string",
                    "index": "not_analyzed"
                },
                "author_name": {
                    "type": "string"
                },
                "author_email": {
                    "type": "string"
                },
                "committer_name": {
                    "type": "string"
                },
                "committer_email": {
                    "type": "string"
                },
                "date": {
                    "type": "date"
                },
                "subject": {
                    "type": "string"
                },
                "body": {
                    "type": "string"
                }
            }
        }
    }
}
